{
  "name": "idn-area",
  "version": "5.1.1",
  "description": "API that provides information about Indonesia administrative area.",
  "author": "fityannugroho (https://github.com/fityannugroho)",
  "funding": "https://github.com/sponsors/fityannugroho",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fityannugroho/idn-area"
  },
  "keywords": ["idn-area", "indonesia", "wilayah", "area", "data", "api"],
  "scripts": {
    "build": "nest build",
    "prisma:gen": "tsx prisma/generate.ts",
    "db:migrate": "tsx prisma/migrate.ts",
    "db:seed": "prisma db seed",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage",
    "test:e2e": "vitest run --config ./vitest.config.e2e.mts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/static": "^8.1.1",
    "@nestjs/common": "^11.0.12",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.12",
    "@nestjs/platform-fastify": "^11.0.12",
    "@nestjs/swagger": "^11.1.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.5.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.12",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.13",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.14",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.0.9",
    "idn-area-data": "^3.1.2",
    "prisma": "^6.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "unplugin-swc": "^1.5.1",
    "vitest": "^3.0.9"
  },
  "engines": {
    "node": ">=20.9.0"
  }
}
